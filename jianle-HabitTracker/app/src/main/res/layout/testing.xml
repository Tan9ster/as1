<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/delete">

    <TextView
        android:id="@+id/list_item_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="8dp"
        android:textSize="18sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="Add"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/list_item_string" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NEW HABIT"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameNewHabit"
        android:layout_marginTop="29dp"
        android:hint="name of new habit"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateAdded"
        android:hint="date added"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="77dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:id="@+id/checkboxM"
        android:checked="false"
        android:layout_alignBaseline="@+id/list_item_string"
        android:layout_alignBottom="@+id/list_item_string"
        android:layout_toEndOf="@+id/list_item_string" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T"
        android:id="@+id/checkboxT"
        android:layout_alignBottom="@+id/checkboxM"
        android:layout_toEndOf="@+id/checkboxM"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W"
        android:id="@+id/checkboxW"
        android:layout_alignBottom="@+id/checkboxT"
        android:layout_toEndOf="@+id/checkboxT"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R"
        android:id="@+id/checkboxR"
        android:layout_alignBottom="@+id/checkboxW"
        android:layout_alignStart="@+id/textView"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:id="@+id/checkboxF"
        android:checked="false"
        android:layout_alignTop="@+id/checkboxR"
        android:layout_alignEnd="@+id/dateAdded" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S"
        android:id="@+id/checkboxS"
        android:checked="false"
        android:layout_toEndOf="@+id/checkboxF"
        android:layout_alignTop="@+id/checkboxF" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SS"
        android:id="@+id/checkboxSS"
        android:checked="false"
        android:layout_alignTop="@+id/checkboxS"
        android:layout_toEndOf="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:id="@+id/deleteButton"
        android:layout_alignTop="@+id/addButton"
        android:layout_alignParentEnd="true" />

</RelativeLayout>